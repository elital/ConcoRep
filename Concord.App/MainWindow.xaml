<Window x:Class="Concord.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mainTabs="clr-namespace:Concord.App.MainTabs"
        Title="Concord" Height="500" Width="800"
        MinHeight="300" MinWidth="747">
    
    <DockPanel Name="MainPanel">
        <StackPanel Name="ListPanel" Width="150" DockPanel.Dock="Left">
            <ListView>
                <ListViewItem>aaa</ListViewItem>
                <ListViewItem>bbb</ListViewItem>
                <ListViewItem>ccc</ListViewItem>
            </ListView>
        </StackPanel>

        <TabControl Margin="3, 0, 0, 0" DockPanel.Dock="Top">
            <mainTabs:LoadControl Header="Load"/>
            <mainTabs:GlobalControl Header="Global"/>
            <TabItem Header="Groups">
                <DockPanel Width="570"></DockPanel>
            </TabItem>
            <mainTabs:RelationsControl Header="Relations"/>
            <mainTabs:PhrasesControl Header="Phrases"/>
        </TabControl>
    </DockPanel>
</Window>
